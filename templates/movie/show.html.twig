{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <div class="d-flex flex-row">
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ movie.country }}</td>
            </tr>
            <tr>
                <th>ReleasedAt</th>
                <td>{{ movie.releasedAt ? movie.releasedAt|date('Y-M-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ movie.price }}</td>
            </tr>
            <tr>
                <th>Rated</th>
                <td>{{ movie.rated }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ movie.rating }}</td>
            </tr>
            <tr>
                <th>ImdbId</th>
                <td>{{ movie.imdbId }}</td>
            </tr>
            <tr>
                <th>Plot</th>
                <td>{{ movie.plot }}</td>
            </tr>
            <tr>
                <th>Directors</th>
                <td>{{ movie.directors }}</td>
            </tr>
            <tr>
                <th>Writers</th>
                <td>{{ movie.writers }}</td>
            </tr>
            <tr>
                <th>Actors</th>
                <td>{{ movie.actors }}</td>
            </tr>
            </tbody>
        </table>
        <div>
            <img class="float-right" src="{{ movie.poster }}" alt="{{ movie.title }} poster" width="300px">
        </div>
    </div>
    <a class="btn btn-secondary" href="{{ path('app_movie_index') }}">back to list</a>
{% endblock %}
